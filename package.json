{
  "name": "xiuxian",
  "version": "2.4.0",
  "description": "凡人修仙文字游戏",
  "author": "ningmengchongshui",
  "license": "GPL-2.0",
  "main": "main.js",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "app": "npm run css && node app.js --run index.ts",
    "build": "rollup --config rollup.config.js",
    "start": "pm2 startOrRestart pm2.config.cjs",
    "stop": "pm2 stop pm2.config.cjs",
    "delete": "pm2 delete pm2.config.cjs",
    "kill": "pm2 kill",
    "logs": "pm2 logs",
    "monit": "pm2 monit",
    "pm2": "pm2",
    "img-app": "",
    "img-dev": "",
    "css": "tailwindcss -i ./src/input.css -o ./public/output.css",
    "css-m": "tailwindcss -i ./src/input.css -o ./public/output.css -m",
    "css-w": "tailwindcss -i ./src/input.css -o ./public/output.css --watch",
    "server-dev": "nodemon --config backend/nodemon.json",
    "server-start": "pm2 startOrRestart backend/pm2.config.cjs",
    "format": "prettier --write .",
    "check-format": "git diff --exit-code",
    "prepare": "husky"
  },
  "dependencies": {
    "alemonjs": "^1.3.2",
    "axios": "^1.6.5",
    "bullmq": "^4.12.7",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "koa-body": "^6.0.1",
    "mysql2": "^3.6.2",
    "postcss": "^8.4.38",
    "puppeteer": "^22.13.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-puppeteer": "^1.0.2",
    "sequelize": "^6.33.0",
    "xiuxian-api": "link:xiuxian/api",
    "xiuxian-img": "link:xiuxian/img",
    "xiuxian-core": "link:xiuxian/core",
    "xiuxian-db": "link:xiuxian/db",
    "xiuxian-statistics": "link:xiuxian/statistics",
    "xiuxian-utils": "link:xiuxian/utils"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-multi-entry": "^6.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.3",
    "@types/css-modules": "^1.0.5",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-cors": "^0.0.6",
    "@types/koa-router": "^7.4.8",
    "@types/koa-static": "^4.0.4",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.14",
    "@types/qs": "^6.9.9",
    "@types/react-dom": "^18.2.22",
    "@types/ws": "^8.5.5",
    "husky": "^9.0.11",
    "koa": "^2.15.2",
    "koa-cors": "^0.0.16",
    "koa-static": "^5.0.0",
    "nodemon": "^3.1.0",
    "pm2": "^5.3.0",
    "pre-commit": "^1.2.2",
    "prettier": "^3.0.3",
    "react-router-dom": "^6.22.3",
    "rollup": "^4.16.4",
    "rollup-plugin-serve": "^1.1.1",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=16.14.0"
  }
}
