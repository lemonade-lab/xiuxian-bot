{
  "name": "xiuxian-bot",
  "version": "2.4.1",
  "description": "凡人修仙文字游戏",
  "author": "ningmengchongshui",
  "license": "GPL-2.0",
  "main": "src/main.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "app": "npm run css && npx tsx index.ts",
    "dev": "npm run css && npx tsx  watch --clear-screen=false index.ts",
    "img-app": "npx tsx routes.server.ts",
    "img-dev": "npx tsx watch --clear-screen=false routes.server.ts",
    "css": "tailwindcss -i ./src/input.css -o ./public/output.css",
    "css-m": "tailwindcss -i ./src/input.css -o ./public/output.css -m",
    "css-dev": "tailwindcss -i ./src/input.css -o ./public/output.css --watch",
    "start": "pm2 startOrRestart pm2.config.cjs",
    "stop": "pm2 stop pm2.config.cjs",
    "delete": "pm2 delete pm2.config.cjs",
    "kill": "pm2 kill",
    "logs": "pm2 logs",
    "monit": "pm2 monit",
    "pm2": "pm2",
    "format": "prettier --write .",
    "check-format": "git diff --exit-code",
    "prepare": "husky"
  },
  "dependencies": {
    "alemonjs": "^1.3.2",
    "axios": "^1.6.5",
    "bullmq": "^4.12.7",
    "classnames": "^2.5.1",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "koa-body": "^6.0.1",
    "mysql2": "^3.6.2",
    "ollama": "^0.5.8",
    "postcss": "^8.4.38",
    "react-puppeteer": "^1.0.7-rc.0",
    "sequelize": "^6.33.0",
    "xiuxian-api": "link:xiuxian/api",
    "xiuxian-core": "link:xiuxian/core",
    "xiuxian-db": "link:xiuxian/db",
    "xiuxian-img": "link:xiuxian/img",
    "xiuxian-statistics": "link:xiuxian/statistics",
    "xiuxian-utils": "link:xiuxian/utils"
  },
  "devDependencies": {
    "@types/css-modules": "^1.0.5",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-cors": "^0.0.6",
    "@types/koa-router": "^7.4.8",
    "@types/koa-static": "^4.0.4",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.14",
    "@types/qs": "^6.9.9",
    "@types/react-dom": "^18.2.22",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.5",
    "husky": "^9.0.11",
    "koa": "^2.15.2",
    "koa-cors": "^0.0.16",
    "koa-static": "^5.0.0",
    "pm2": "^5.3.0",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.19.0",
    "typescript": "^5.0.4",
    "uuid": "^10.0.0"
  }
}
