{
  "name": "xiuxian-bot",
  "version": "2.0.0",
  "description": "凡人修仙文字游戏",
  "author": "ningmengchongshui",
  "main": "lib/index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "alemonjs dev",
    "build": "alemonjs build",
    "review": "alemonjs start --input ./lib/index.js",
    "server": "npx jsxp dev --node-options alemonjs/loader",
    "start": "pm2 startOrRestart pm2.config.cjs",
    "bundle": "rollup --config rollup.config.js",
    "stop": "pm2 stop pm2.config.cjs",
    "delete": "pm2 delete pm2.config.cjs",
    "format": "prettier --write .",
    "check-format": "git diff --exit-code",
    "prepare": "husky"
  },
  "dependencies": {
    "@alemonjs/discord": "^0.0.3",
    "@alemonjs/kook": "^0.0.2",
    "@alemonjs/qq": "^0.0.3",
    "@alemonjs/qq-group-bot": "^0.0.4",
    "@alemonjs/qq-guild-bot": "^0.0.4",
    "alemonjs": "2.0.0-rc.22",
    "bullmq": "^4.12.7",
    "classnames": "^2.5.1",
    "dotenv": "^16.4.5",
    "ioredis": "^5.3.2",
    "jsxp": "1.0.0",
    "mysql2": "^3.6.2",
    "sequelize": "^6.33.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.3.1",
    "@types/uuid": "^10.0.0",
    "husky": "^9.0.11",
    "pm2": "^5.3.0",
    "prettier": "^3.0.3"
  }
}
