{
  "name": "xiuxian",
  "version": "2.3.0",
  "description": "凡人修仙文字游戏",
  "author": "ningmengchongshui",
  "license": "GPL-2.0",
  "main": "main.js",
  "type": "module",
  "private": true,
  "scripts": {
    "app": "alemonjs",
    "dev": "nodemon -q",
    "build": "rollup --config rollup.config.js",
    "start": "pm2 startOrRestart pm2.config.cjs",
    "stop": "pm2 stop pm2.config.cjs",
    "delete": "pm2 delete pm2.config.cjs",
    "pm2": "pm2",
    "image": "nodemon --config src-image/nodemon.json",
    "server:dev": "nodemon --config server/nodemon.json",
    "server:build": "rollup --config server/rollup.config.js",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "bullmq": "^4.12.7",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.2",
    "postcss": "^8.4.38",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "alemonjs": "^1.2.1-rc.2",
    "sequelize": "^6.33.0"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-multi-entry": "^6.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.3",
    "@types/css-modules": "^1.0.5",
    "@types/node": "^20.3.1",
    "@types/qs": "^6.9.9",
    "pm2": "^5.3.0",
    "rollup": "^4.16.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "@types/react-dom": "^18.2.22",
    "@types/ws": "^8.5.5",
    "husky": "^9.0.11",
    "koa": "^2.15.2",
    "koa-cors": "^0.0.16",
    "nodemon": "^3.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^3.0.3",
    "react-router-dom": "^6.22.3",
    "rollup-plugin-serve": "^1.1.1"
  },
  "engines": {
    "node": ">=16.14.0"
  },
  "alemonjs": {
    "download": {
      "github": {
        "arg": "--depth=1 -b build",
        "url": "https://github.com/ningmengchongshui/xiuxian-bot.git"
      }
    },
    "env": {
      "ALEMONJS_REDIS_HOST": "localhost",
      "ALEMONJS_REDIS_PORT": 6379,
      "ALEMONJS_REDIS_PASSWORD": "",
      "ALEMONJS_REDIS_DB": 3,
      "ALEMONJS_MYSQL_DATABASE": "xiuxian",
      "ALEMONJS_MYSQL_USER": "root",
      "ALEMONJS_MYSQL_PASSWORD": "",
      "ALEMONJS_MYSQL_HOST": "localhost",
      "ALEMONJS_MYSQL_PROT": 3306
    }
  }
}
