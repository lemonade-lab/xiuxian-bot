{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": true,
    "preserveConstEnums": true,
    "ignoreDeprecations": "5.0",
    "jsx": "react",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "allowJs": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": ["node_modules/@types"]
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "plugins",
    "alemon.*.{ts,js}",
    "afloat.*.{ts,js}",
    "src",
    "main.{ts,js}"
  ],
  "exclude": [
    "node_modules",
    ".vscode",
    ".apps",
    "dist",
    "config",
    "data",
    "logs",
    "help"
  ]
}
